		"main": [
			"com.getblockt.progressioncraft.ProgressionCraft"
		],
		"client": [
			"com.getblockt.progressioncraft.ProgressionCraftClient"
		],
		"fabric-datagen": [
			"com.getblockt.progressioncraft.ProgressionCraftDataGenerator"
		]
	},
	"mixins": [
		"progressioncraft.mixins.json"
	],
	"depends": {
